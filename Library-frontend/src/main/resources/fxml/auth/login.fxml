<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" 
      spacing="10" alignment="CENTER" styleClass="login-container" prefWidth="300">
    <Text text="Вход в систему" styleClass="login-title"/>
    
    <Label text="Логин:" styleClass="login-label"/>
    <TextField fx:id="usernameField" promptText="Введите логин"/>
    
    <Label text="Пароль:" styleClass="login-label"/>
    <PasswordField fx:id="passwordField" promptText="Введите пароль"/>
    
    <Label fx:id="errorLabel" styleClass="error-label"/>
    
    <Button text="Войти" onAction="#handleLogin" styleClass="login-button" defaultButton="true"/>
</VBox>